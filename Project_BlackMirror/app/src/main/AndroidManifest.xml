<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_blackmirror">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project_BlackMirror">
        <activity
            android:name=".RoomPageActivity"
            android:exported="false" />
        <activity
            android:name=".CheckRoomsActivity"
            android:exported="false"
            android:label="Rooms"
            android:parentActivityName=".RoomBuilderActivity" />
        <activity
            android:name=".UserOptionsActivity"
            android:exported="false"
            android:label="User Options"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RoomBuilderActivity"
            android:exported="false"
            android:label="Room Builder"
            android:parentActivityName=".UserOptionsActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Project: Black Mirror">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>